@{
    ViewData["Title"] = "Học tập";
}

<h2>Upload Tài Liệu</h2>

<form asp-action="UploadText" method="post">
    <div>
        <label for="documentText">Nhập nội dung tài liệu:</label><br />
        <textarea name="documentText" rows="10" cols="80"></textarea>
    </div>
    <br />
    <button type="submit">Tải lên và xử lý</button>
</form>

<form asp-action="UploadFile"
      method="post" enctype="multipart/form-data">
    <input type="file" name="pdfFile" accept=".pdf" />
    <button type="submit">Tải lên</button>
</form>


@if (ViewBag.Message != null)
{
    <p style="color: green">@ViewBag.Message</p>
}
